


{{#if invalidUrl }}
<div class="container">
  <div class="card">
      <div class="header">
        {{#if exist }}
        <h1>Oops!</h1>
        {{else}}
        <h1>Invalid URL!</h1>
        {{/if}}
      </div>
      <div class="content">
        {{#if exist }}
        <p>{{message}}</p>
        {{else}}
        <p>It seems that the verification link is invalid or has expired.</p>
        <p>Please request a new verification email or contact support if you need assistance.</p>
        {{/if}}
      </div>
      <div class="footer">
          <p>&copy; {{year}} {{company}}. All rights reserved.</p>
      </div>
  </div>
</div>
{{else}}


<div class="container">
    <div class="card">
        <div class="header">
            <h1>You're All Set!</h1>
        </div>
        <div class="content">
            <p>Your email has been successfully verified.</p>
            <p>Welcome to {{company}}! Start exploring, connecting, and sharing with others now.</p>
            <a href="https://flower-shop-api.vercel.app" class="button">Open the App</a>
        </div>
        <div class="footer">
            <p>&copy; {{year}} {{company}}. All rights reserved.</p>
        </div>
    </div>
</div>

{{/if}}
